#!/usr/bin/env python2
import sys
import argparse
from sldb.util.align import run_align

if __name__ == '__main__':
    parser = argparse.ArgumentParser(description='Runs presto on a directory.')
    parser.add_argument('base_dir',  help='Properly structured directory '
                        'with FASTA R1 and R2 files.')
    parser.add_argument('--studies', nargs='+', default=None,
                        help='Limit to certain study names')
    parser.add_argument('--ext', default='.trim.fasta', help='Extension of '
                        'FASTA files')

    sys.exit(run_align(parser.parse_args()))
