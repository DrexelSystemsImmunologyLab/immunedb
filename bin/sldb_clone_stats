#!/usr/bin/env python2
import sys
import argparse
import sldb.common.config as config

if __name__ == '__main__':
    parser = config.get_base_arg_parser('Generates statistics for clones',
                                        multiproc=True)
    parser.add_argument('baseline_path', help='Path to Baseline main script')
    parser.add_argument('--clone-ids', nargs='+', type=int, help='Limit '
                        'to certain clone IDS')
    parser.add_argument('--subject-ids', nargs='+', type=int, help='Limit '
                        'to certain subjects')
    parser.add_argument('--force', action='store_true', help='Force '
                        'regeneration of stats even if they already exist')
    parser.add_argument('--temp', default='/tmp', help='Path for temporary '
                        'baseline files')
    args = parser.parse_args()
    if args.subject_ids is not None and args.clone_ids is not None:
        parser.error('May only specify subject or clone IDs')

    session = config.init_db(args.master_db_config, args.data_db_config)
    from sldb.aggregation.clone_stats import run_clone_stats
    sys.exit(run_clone_stats(session, args))
