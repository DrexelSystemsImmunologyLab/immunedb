#!/usr/bin/env python2
import sys
import argparse
import sldb.common.config as config

if __name__ == '__main__':
    parser = config.get_base_arg_parser('Generates statistics for samples')
    parser.add_argument('--samples', nargs='+', type=int,
                        help='Limit statistics updates to certain samples')
    parser.add_argument('--force', action='store_true', help='Force '
                        'regeneration of stats even if they already exist')
    parser.add_argument('--clones-only', action='store_true',
                        help='Regenerate statistics for clone filters '
                        'only')
    args = parser.parse_args()

    session = config.init_db(args.master_db_config, args.data_db_config)

    from sldb.aggregation.sample_stats import run_sample_stats
    sys.exit(run_sample_stats(session, args))
